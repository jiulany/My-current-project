.wuc-tab {
    white-space: nowrap;
}
.wuc-tab-item {
    height: 84.69rpx;
    display: inline-block;
    line-height: 84.69rpx;
	background: #FFFFFF;
	font-size: 29.03rpx;
	font-weight: bold;
	border-bottom: 1px solid #F3F3F3;
}
.wuc-tab-item:nth-child(2){
	border-left: 1px solid #A3A3A3;
	border-right: 1px solid #A3A3A3;
}
.wuc-tab-item.cur {
    border-bottom: 6.41rpx solid #FDD000;
}
.wuc-tab.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
	-webkit-box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
	        box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
