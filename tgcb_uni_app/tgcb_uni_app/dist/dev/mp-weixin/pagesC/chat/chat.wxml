<view class="chat"><view class="message"><block wx:for="{{message}}" wx:for-item="item" wx:for-index="__i0__"><view><block wx:if="{{item.position=='left'}}"><view class="message-unit-left"><view class="head-portrait"><image class="head-portrait-image" src="{{item.avatar_url}}"></image></view><view class="message-content">{{''+item.message}}<block wx:if="{{!robot}}"><view data-event-opts="{{[['tap',[['cutRobot',['$event']]]]]}}" style="color:#FDD000;" bindtap="__e">[机器人模式]</view></block><view class="testmotion"></view></view></view></block><block wx:else><view class="message-unit-right"><view class="message-content">{{item.message+''}}<view class="testmotion"></view></view><view class="head-portrait"><image class="head-portrait-image" src="{{no_pic}}"></image></view></view></block><view class="send-time">{{item.send_time}}</view></view></block></view><view class="chat-bottom"><view class="chat-input-box"><input class="chat-input" type="text" placeholder="问点什么呢~" data-event-opts="{{[['input',[['__set_model',['','inputValue','$event',[]]],['input',['$event']]]]]}}" value="{{inputValue}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['_send',['$event']]]]]}}" class="send" bindtap="__e">发送</view></view></view>