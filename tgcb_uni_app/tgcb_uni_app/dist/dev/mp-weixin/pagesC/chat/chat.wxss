  width: 557rpx;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx 43rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.chat .chat-bottom .send {
  width: 140rpx;
  height: 88rpx;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background: #f5f5f5;
  border-radius: 8rpx;
  text-align: center;
