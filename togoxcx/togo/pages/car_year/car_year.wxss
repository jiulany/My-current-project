.img_car {
  width: 100%;
  height: 400rpx;
}

.img_car image {
  width: 100%;
  height: 100%;
}

.title_car {
  line-height: 130rpx;
  padding-left: 3%;
  color: #474747;
  font-weight: bold;
}

.price_car {
  line-height: 130rpx;
  text-align: right;
  color: #f75c3e;
  padding-right: 5%;
}

.all_car {
  border-top: 2px solid #f5f5f5;
  border-bottom: 2px solid #f5f5f5;
}

.desc_pro{
  font-size: 15px;
  padding-left: 3%;
  padding-top: 2%;
  padding-bottom: 5%;
}

.desc_cont{
  font-size: 13px;
  padding-left: 3%;
  text-indent: 28px;
  line-height: 45rpx;
}

.buy{
  width: 100%;
  line-height: 98rpx;
  background: #fbd731;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  font-size: 15px;
  color: #333333;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #444956;
  opacity: 0.4;
  overflow: hidden;
  z-index: 200000;
  color: #fff;
}
.modalBox_0{
  width: 80%;
  height: 360rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 300000;
  border-radius: 20rpx
}

.img_box1 {
  right: 5%;
  display: inline-block;
  position: absolute;
  top: -5rpx;
}

.img_box1 image {
  width: 30rpx;
  height: 35rpx;
  /* margin-top: 10rpx; *//* margin-left: 30%; */
}

.tip_0 {
  position: relative;
  height: 100%;
}

.title_tip {
  font-size: 15px;
  color: #fdd000;
  text-align: center;
  margin-top: 30rpx;
}
.cont_tip_0{
   margin-left:14%;
  width: 75%;
  font-size:12px;
  color: #474747;
  text-align: center;
  margin-top: 50rpx;
  letter-spacing: 1px;
  line-height: 50rpx;
}
.btn_tip {
  margin-top: 50rpx
}
.btn_tip button{
  background: #fdd000;
  border-radius: 100rpx;
  color: white;
  font-size: 14px;
  margin-left: auto;
  margin-right: auto;
  height: 65rpx;
}

.btn_tip button::after {
  border: none;
}
