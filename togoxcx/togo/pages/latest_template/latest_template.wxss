/**index.wxss**/

page {
  background-color: #eee;
}

.box {
  background-color: #fff;
  border-radius: 2%;
  margin: 0 20rpx 0 20rpx;
}

.container1 {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx 0 20rpx;
  position: relative;
  margin-top: 15rpx;
  border-bottom: 1px solid #f5f5f5;
}

.top-container {
  display: flex;
  flex-direction: row;
  position: relative;
}

.title {
  font-size: 30rpx;
  margin-top: 10px;
}

.img {
  position: absolute;
  top: 20rpx;
  left: 80%;
  width: 22rpx;
  height: 33rpx;
  /* margin-left: 33%;
  margin-top: 20rpx; */
}

.distance {
  position: absolute;
  top: 28rpx;
  left: 85%;
  font-size: 20rpx;
  /* margin-top: 28rpx;
  margin-left: 5rpx; */
  color: #414141;
}

.address {
  font-size: 23rpx;
  text-align: left;
  margin-top: 10rpx;
  color: #414141;
}

.shopowner {
  font-size: 25rpx;
  text-align: left;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: #414141;
}

.contact-btn {
  position: absolute;
  width: 200rpx;
  height: 50rpx;
  padding: 0;
  font-size: 25rpx;
  color: white;
  line-height: 50rpx;
  text-align: center;
  background-color: #fdd000;
  top: 90rpx;
  right: 20rpx;
  border: none;
}

.img-container {
  padding: 20rpx 20rpx 15rpx 0rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius: 5%;
}

.img-show {
  width: 220rpx;
  height: 210rpx;
  margin-left: 20rpx;
  padding-bottom: 15rpx;
}
