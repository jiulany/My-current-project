/* pages/my_coupon/my_coupon.wxss */
page {
  height: 100%;
  background: #fffcfc;
}

.order {
  height: 100%;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background: #f5f5f5
}

.swiper_ord {
  height: 93%;
}

.swiper-tab-item {
  width: 30%;
  color: #434343;
  font-size: 28rpx;
}

.swiper_itm_ord {
  height: 100%;
}

.active {
  color: white;
  background: #ffd100
}

swiper {
  text-align: center;
}

.ord_icon image {
  width: 30rpx;
  height: 30rpx;
}

.ord_itm {
  color: black;
  padding:20rpx 30rpx;
  font-size: 15px;
  overflow-y: scroll;
  padding-bottom: 150rpx;
  text-align: start;
}

scroll-view {
  height: 100%;
  background: #fffcfc;
}
.card_itm{
  padding: 20rpx;
  background: white;
  box-shadow: 0 3px 14px 0px rgba(0, 0, 0, .09);
  font-size: 12px;
  margin-top: 10rpx
}
.card_name{
  font-size: 17px;
  font-weight: 500
}
.card_price{
  text-align: end;
  color: #f03b3b;
  font-size: 20px
}
.card_price span{
  font-size: 12px
}
.card_limit{
  color: #a7a7a7
}

.card_code{
  margin-top: 20rpx;
  color: #a7a7a7
}

.card_limit_1{
  text-align: end
}
.card_spacer{
  height: 1px;
  border-bottom: 1px dashed #f2f2f2 ;
  /* margin-top: 10rpx; */
  margin-bottom: 20rpx
}
.card_ctrl{
  color: #999999
}
.card_ctrl button{
  font-size: 10px;
  border-radius: 0;
  color: white;
  height: 50rpx;
  line-height: 50rpx
}
.card_ctrl button::after{
  border: none
}
.card_ctrl_btn{
  background: #999
}
.card_ctrl_btn_use{
  background: #df4242
}
