              </i-col>
            </i-col>
          </i-col>
        </i-row>
        <i-spin wx:if="{{wait_loading}}" i-class="loading" custom>
          <i-icon type="refresh" size="20" i-class="icon-load"></i-icon>
          <view>加载中...</view>
        </i-spin>
        <i-load-more wx:if="{{wait_noms}}" tip="暂无其他数据" loading="{{ false }}" />
      </scroll-view>
    </swiper-item>
    <!-- 等待使用 -->
