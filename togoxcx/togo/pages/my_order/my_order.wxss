}

.swiper-tab-item {
  width: 30%;
  color: #434343;
  font-size: 28rpx;
}

.swiper_itm_ord {
  height: 100%;
}

.active {
  /* color: #fdd000; */
  color: #ffffff;
  /* border-bottom: 4rpx solid #fdd000; */
  background: #fdd000;
}

swiper {
  text-align: center;
  background-color: #fff;
}

.ord_icon image {
  width: 30rpx;
  height: 30rpx;
}

.ord_itm {
  color: #474747;
  padding: 0 30rpx;
  font-size: 15px;
  overflow-y: scroll;
  text-align: start;
  /* padding-top: 30rpx */
}
.loading{
  padding-bottom: 30rpx;
  padding-top: 30rpx
}
scroll-view {
  height: 100%;
  background: #f5f5f5;
}

.ord_ord {
  background: white;
  padding: 25rpx 0 0 0;
  margin-top: 15rpx;
  box-shadow: 0 3px 14px 0px rgba(0, 0, 0, 0.05);
}

.ord_bt {
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.ord_ct {
  padding: 0 20rpx;
  padding-bottom: 30rpx;
}

.ord_ord_nm {
  font-size: 14px;
}

.ord_ord_bh {
  margin-top: 40rpx;
  font-size: 12px;
  color: #a6a6a6;
}

.ord_ord_count {
  text-align: end;
}

.ord_ord_moy {
  text-align: end;
}

.ord_tp image {
  width: 120rpx;
  height: 120rpx;
}

.ord_spacer {
  height: 1px;
  background: #f5f5f5;
}

.ord_price {
  padding: 30rpx 20rpx;
}

.ord_price_nm {
  text-align: end;
  color: #e41717;
}

.ord_control {
  text-align: end;
  margin-top: 20rpx;
}

.ord_control button {
  font-size: 11px;
  border-radius: 0;
  display: inline-block;
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  background: white;
  border: 1px solid #e41717;
  color: #e41717;
}

.ord_control button:nth-of-type(1) {
  margin-right: 20rpx;
  border: 1px solid #999;
  color: #333;
}

.ord_control button::after {
  border: none;
}
@keyframes ani-demo-spin {
    from { transform: rotate(0deg);}
    50%  { transform: rotate(180deg);}
    to   { transform: rotate(360deg);}
}
.icon-load{
    animation: ani-demo-spin 1s linear infinite;
}
.inp_mm{
