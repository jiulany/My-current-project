}

.ord_control {
  text-align: end;
  margin-top: 20rpx;
}

.ord_control button {
  font-size: 11px;
  border-radius: 0;
  display: inline-block;
  width: 180rpx;
  height: 55rpx;
  line-height: 55rpx;
  background: white;
  border: 1px solid #e41717;
  color: #e41717;
}

.ord_control button:nth-of-type(1) {
  margin-right: 10rpx;
  border: 1px solid #999;
  color: #333;
}

.ord_control button::after {
  border: none;
}
