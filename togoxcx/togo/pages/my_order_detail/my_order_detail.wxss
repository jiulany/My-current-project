}

.ortl_dtls_g image {
  width: 15rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.ortl_dtls_cop button {
  font-size: 12px;
  border-radius: 0;
  display: inline-block;
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: white;
  border: 1px solid #999;
  color: #333;
}

.ortl_dtls_cop button::after {
  border-radius: 0;
}

.ortl_dtlsprice {
