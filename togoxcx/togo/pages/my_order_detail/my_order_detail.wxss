}

.ortl_dtls {
  font-size: 15px;
  margin-top: 10rpx;
}

.ortl_dtls_it {
  padding: 28rpx;
  border-bottom: 1px solid #f5f5f5;
  background: white;
  font-size: 13px
}

.ortl_dtls_num {
  text-align: end;
}

.ortl_dtls_cop {
  text-align: end;
}

.ortl_dtls_g {
