page {
  height: 100%;
  background: white;
}

.order {
  height: 100%;
}

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 7%;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper_ord {
  height: 93%;
}

.swiper-tab-item {
  width: 30%;
  color: #434343;
  font-size: 28rpx;
}

.swiper_itm_ord {
  height: 100%;
}

.active {
  color: #fdd000;
  border-bottom: 4rpx solid #fdd000;
}

swiper {
  text-align: center;
  background-color: #fff;
}


scroll-view {
  height: 100%;
  background: #f5f5f5;
}
.rcd_it{
  font-size: 12px;
  background: white;
  padding: 20rpx 10rpx;
  position: relative;
  z-index: 2;
}
.rcd_tp image{
width:100rpx;
height: 100rpx;
position: relative;
top:9rpx
}
.rcd_ms{
  text-align: start
}
.rcd_ms view{
  margin-top: 5rpx
}
.rcd_ctrl{
  margin-top: 40rpx;
  text-align: end
}
.rcd_ctrl button{
  font-size: 10px;
  background: white;
  height: 50rpx;
  line-height: 50rpx;
  width: 160rpx
}
.rcd_sta{
  color: #d91313
}
.rcd_tg{
  color: #909090
}
.rcd_tg text{
  color: #d91313
}
.xq{
  display: inline-block;background: #e0e0e0;
  color: #474747;
  font-size: 10px;
  margin-left: 10rpx;
  padding: 2rpx 8rpx;
  border-radius: 3px
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #444956;
  opacity: 0.3;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modalBox {
  width: 80%;
  height: 700rpx;
  background: #fff;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  z-index: 10000;
}

.imgBox{
  width: 80%;
  height: 290rpx;
    margin-top:40rpx;
}

.imgBox image{
  width: 290rpx;
  height: 290rpx;
  margin-left: 27%;
}

.img_box1 {
  right: 1%;
  display: inline-block;
  position: absolute;
  top: 10rpx;
  width: 60rpx;
  /* background: green; */

}

.img_box1 image {
  width: 30rpx;
  height: 35rpx;
  margin-left: 30%;
}

.red_tip{
  text-align: center;
  color: #e84242;
  font-size:16px;
  margin-top: 20rpx;
}

.answer{
  text-align: left;
  margin-left: 5%;
  font-size: 13px;
  color: #474747;
  line-height: 45rpx;
  margin-top: 40rpx;
}

.modalBox1 {
  width: 80%;
  height: 700rpx;
  background: #fff;
  position: absolute;
  top: 0;
