}

.getYourself {
  height: 100rpx;
  background: #fdd000;
  font-size: 15px;
  text-align: center;
  line-height: 100rpx;
  margin-top: 25rpx;
  margin-left: 4%;
  color: #474747;
  font-weight: bold;
  position: relative;
}

.addressBox {
  margin-top: 70rpx;
  margin-left: 5%;
  border-bottom: 1px solid #f5f5f5;
  padding-top: 25rpx;
  padding-bottom: 20rpx;
}

.imgBox {
  height: 37rpx;
}

.img_chexing {
  width: 100%;
  height: 100%;
}

.shopName {
  font-size: 15px;
  margin-left: 3%;
  color: #474747;
}

.imgToBox {
  text-align: end;
  margin-top: -5rpx;
}

.imgTo {
  width: 15rpx;
  height: 20rpx;
}

.img_selected {
  padding-top: 65rpx;
  margin-left: 1%;
}

.line {
  padding-bottom: 25rpx;
  border-bottom: 1px solid #f5f5f5;
}

.img_content {
  width: 117rpx;
  height: 117rpx;
  padding-top: 25rpx;
}

.title {
  font-size: 23rpx;
  color: #474747;
  padding-top: 35rpx;
}

.title_desc {
  font-size: 23rpx;
  color: #999;
  padding-top: 35rpx;
  line-height: 40rpx;
  height: 80rpx;
  overflow-y: hidden;
}

.price {
  font-size: 16px;
  text-align: end;
  color: #f75c3e;
  font-weight: bold;
  padding-top: 60rpx;
  margin-top: 40rpx;
}

.car_type_box {
  height: 138rpx;
  border-bottom: 1px solid #f5f5f5;
}

.car_type {
  font-size: 15px;
  line-height: 138rpx;
  margin-left: 5%;
}

.car_type_name {
  line-height: 138rpx;
  font-size: 14px;
  color: #474747;
  text-align: end;
}

.content{
  padding-left: 4%;
}

.account_pro {
  font-size: 15px;
  margin-left: 5%;
  margin-top: 15rpx;
}

.price_pro {
  line-height: 138rpx;
  /* padding-right: 1%; */
  text-align: end;
  font-size: 20px;
  color: #f75c3e;
  font-weight: bold;
}

.buy_btn {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  background: #fdd000;
  text-align: center;
  line-height: 100rpx;
  font-size: 15px;
  color: #474747;
  font-weight: bold;
}

/* 购买弹框 */

.choose {
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  height: 1000rpx;
  z-index: 222;
  /* box-shadow: 5px 0 10px 1px #f5f5f5; */
}

.order_box {
  height: 120rpx;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
}

.img_box {
  left: 2%;
  display: inline-block;
  position: absolute;
  height: 120rpx;
  /* background: green; */
}

.img_box image {
  width: 30rpx;
  height: 35rpx;
  margin-top: 40rpx;
  margin-left: 30%;
}

.title_box {
  line-height: 120rpx;
  text-align: center;
  font-size: 15px;
}

.title_price {
  text-align: center;
  padding-top: 25rpx;
  font-size: 30px;
  color: #474747;
}

/* 支付账号 */

.accountBox {
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 20rpx;
}

.account_number {
  padding-top: 50rpx;
  font-size: 15px;
  color: #909090;
  margin-left: 5%;
}

.number {
  text-align: right;
  color: #474747;
  font-size: 16px;
  padding-top: 40rpx;
}

.weixinBox {
  height: 40rpx;
  margin-top: 35rpx;
  margin-left: 5%;
}

.weixinBox image {
  width: 40rpx;
  height: 30rpx;
}

.img_selected1 {
  margin-top: 35rpx;
  padding-left: 5%;
}

.weixin_pay {
  margin-top: 35rpx;
  font-size: 15px;
}

.payBox {
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 30rpx;
}

/* 立即付款 */

.payNow {
  color: #474747;
  position: fixed;
  bottom: 0;
  background: #fdd000;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 15px;
  font-weight: bold;
}

